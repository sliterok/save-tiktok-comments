{
  "manifest_version": 3,
  "name": "TikTok Comment Exporter",
  "version": "1.0.0",
  "description": "Export comments from TikTok videos.",
  "permissions": [
    "storage",
    "debugger",
    "tabs",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "https://*.tiktok.com/*"
  ],
  "background": {
    "service_worker": "dist/background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.tiktok.com/*"
      ],
      "js": [
        "dist/content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}